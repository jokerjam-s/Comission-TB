@model ComissionTB.ViewModels.CreateUserViewModel

@{
    ViewData["Title"] = "Новый сотрудник";
}

<h1>Новый сотрудник</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="userFio" class="control-label"></label>
                <input asp-for="userFio" class="form-control" />
                <span asp-validation-for="userFio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userFirstName" class="control-label"></label>
                <input asp-for="userFirstName" class="form-control" />
                <span asp-validation-for="userFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userSecName" class="control-label"></label>
                <input asp-for="userSecName" class="form-control" />
                <span asp-validation-for="userSecName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Должность</label>
                @Html.DropDownListFor(
                    l => l.id_dl,
                    new SelectList(Model.dolgnList, "id_dl", "dlName"),
                    new { @class = "form-control" }
                )
            </div>
            <div class="form-group">
                <label class="control-label">Подразделениеи</label>
                @Html.DropDownListFor(
                    l => l.id_cex,
                    new SelectList(Model.cexList, "id_cex", "cexName"),
                    new { @class = "form-control" }
                )
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordConfirm" class="control-label"></label>
                <input asp-for="PasswordConfirm" class="form-control" />
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-primary">К списку</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
