@model ComissionTB.ViewModels.EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}

<h2>Редактирование пользователя</h2>

<form asp-action="Edit" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Email"></label><br />
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="userFio"></label><br />
        <input class="form-control" asp-for="userFio" />
        <span asp-validation-for="userFio"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="userFirstName"></label><br />
        <input class="form-control" asp-for="userFirstName" />
        <span asp-validation-for="userFirstName"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="userSecName"></label><br />
        <input class="form-control" asp-for="userSecName" />
        <span asp-validation-for="userSecName"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Должность</label>
        @Html.DropDownListFor(
            l => l.id_dl,
            new SelectList(Model.dolgnList, "id_dl", "dlName"),
            new { @class = "form-control" }
        )
    </div>

    <div class="form-group">
        <label class="control-label">Подразделение</label>
        @Html.DropDownListFor(
            l => l.id_cex,
            new SelectList(Model.cexList, "id_cex", "cexName"),
            new { @class = "form-control" }
        )
    </div>

    <div class="form-group">
        <input type="submit" value="Изменить" class="btn btn-warning" />
    </div>
</form>