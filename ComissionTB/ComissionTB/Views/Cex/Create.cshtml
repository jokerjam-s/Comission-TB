@model ComissionTB.ViewModels.CreateCexViewModel

@{
    ViewData["Title"] = "Новое подразделение";
}

<h1>Новое подразделение</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="cexName" class="control-label"></label>
                <input asp-for="cexName" class="form-control" />
                <span asp-validation-for="cexName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserId" class="control-label">Руководитель</label>
                @Html.DropDownListFor(
                    m => m.UserId,
                    new SelectList(Model.Users, "Id", "userFio"),
                    new { @class = "form-control" }
                )
            </div>

            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-primary">К списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
